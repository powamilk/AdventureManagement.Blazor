@inherits LayoutComponentBase

<div class="main-layout">
    <!-- App Bar -->
    <header class="app-bar">
        <button class="menu-button" @onclick="ToggleDrawer">&#9776;</button>
        <span class="app-title">AdventureManager.Blazor</span>
    </header>

    <!-- Drawer (Sidebar) -->
    <div class="drawer" style="display: @(isDrawerOpen ? "block" : "none")">
        <nav class="nav">
            <ul>
                <li><NavLink href="/" class="nav-link">Home</NavLink></li>
                <li><NavLink href="/counter" class="nav-link">Counter</NavLink></li>
                <li><NavLink href="/fetchdata" class="nav-link">Fetch Data</NavLink></li>
                <li><NavLink href="/adventure/list" class="nav-link">Adventure</NavLink></li>
                <li><NavLink href="/guide/list" class="nav-link">Guide</NavLink></li>
                <li><NavLink href="/organism/list" class="nav-link">Organism</NavLink></li>
                <li><NavLink href="/participant/list" class="nav-link">Participant</NavLink></li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        @Body
    </main>
</div>

@code {
    private bool isDrawerOpen = true;

    private void ToggleDrawer()
    {
        isDrawerOpen = !isDrawerOpen;
    }
}
