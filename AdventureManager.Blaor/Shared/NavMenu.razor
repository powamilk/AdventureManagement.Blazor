@using MudBlazor
@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Color="Color.Primary">
        <MudText Typo="Typo.h6" Class="ml-2">AdventureManager.Blaor</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Color="Color.Primary" Elevation="4" ClipMode="DrawerClipMode.Always">
        <MudDrawerContent>
            <MudNav>
                <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
                <MudNavLink Href="/counter" Icon="@Icons.Material.Filled.Add">Counter</MudNavLink>
                <MudNavLink Href="/fetchdata" Icon="@Icons.Material.Filled.Cloud">Fetch Data</MudNavLink>
                <MudNavLink Href="/adventure/list" Icon="@Icons.Material.Filled.Explore">Adventure</MudNavLink>
                <MudNavLink Href="/guide/list" Icon="@Icons.Material.Filled.Explore">Guide</MudNavLink>
                <MudNavLink Href="/organism/list" Icon="@Icons.Material.Filled.Explore">Organism</MudNavLink>
                <MudNavLink Href="/participant/list" Icon="@Icons.Material.Filled.Explore">Participant</MudNavLink>
            </MudNav>
        </MudDrawerContent>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
